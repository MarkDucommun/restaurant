<h1>All Restaurants</h1>
<h2><%= link_to "Create a Restaurant", new_restaurant_path %></h2>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <span class="show">
        <%= link_to restaurant.name, restaurant %>
      </span>
      <span class="edit">
        <%= link_to 'edit', edit_restaurant_path(restaurant) %>
      </span>
    </li>
  <% end %>
</ul>
